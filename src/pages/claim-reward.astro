---
import AuthLayout from "../components/AuthLayout.astro";
import { getUser } from "../utils/auth";
import { supabase } from "../utils/database";

const user = await getUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/login');
}

let verifiedCount = 0;
let reward = null;
let canClaim = false;

if (supabase) {
  const { data: ordersData } = await supabase
    .from('orders')
    .select('*')
    .eq('user_id', user.id)
    .eq('status', 'verified');
  
  verifiedCount = ordersData?.length || 0;

  const { data: rewardData } = await supabase
    .from('rewards')
    .select('*')
    .eq('user_id', user.id)
    .single();
  
  reward = rewardData;
  canClaim = verifiedCount >= 5 && !reward;
}

let success = '';
let error = '';
const url = new URL(Astro.request.url);
success = url.searchParams.get('success') || '';
error = url.searchParams.get('error') || '';
---

<AuthLayout title="Claim Reward" user={user}>
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-8 border-2 border-abbco-gold/20">
      <h1 class="text-3xl font-bold text-abbco-gold mb-6">Claim Your Reward</h1>
      
      {success && (
        <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
          {success}
        </div>
      )}
      
      {error && (
        <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
          {error}
        </div>
      )}

      {!canClaim && !reward && (
        <div class="bg-yellow-50 border border-yellow-300 rounded-lg p-6 text-center">
          <h2 class="text-xl font-semibold mb-2 text-abbco-charcoal">Not Eligible Yet</h2>
          <p class="text-abbco-charcoal/70 mb-4">
            You need 5 verified orders to claim your reward.
          </p>
          <p class="text-2xl font-bold text-abbco-gold mb-4">
            {verifiedCount} / 5 Orders Verified
          </p>
          <a 
            href="/dashboard" 
            class="inline-block bg-abbco-gold text-white font-semibold px-6 py-2 rounded-lg hover:bg-abbco-gold/90 transition"
          >
            Back to Dashboard
          </a>
        </div>
      )}

      {canClaim && (
        <div>
          <div class="bg-abbco-gold/10 border border-abbco-gold rounded-lg p-6 mb-6 text-center">
            <h2 class="text-2xl font-bold text-abbco-gold mb-2">Congratulations! üéâ</h2>
            <p class="text-abbco-charcoal">
              You've reached 5 verified orders! Claim your free product now.
            </p>
          </div>

          <form action="/api/rewards/claim" method="POST" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-semibold mb-2">
                Full Name <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-abbco-charcoal/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-abbco-gold"
              />
            </div>

            <div>
              <label for="address" class="block text-sm font-semibold mb-2">
                Shipping Address <span class="text-red-500">*</span>
              </label>
              <textarea
                id="address"
                name="address"
                required
                rows="4"
                placeholder="Street address, city, state, ZIP code"
                class="w-full px-4 py-3 border border-abbco-charcoal/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-abbco-gold resize-none"
              ></textarea>
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold mb-2">
                Phone Number <span class="text-red-500">*</span>
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                placeholder="(555) 123-4567"
                class="w-full px-4 py-3 border border-abbco-charcoal/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-abbco-gold"
              />
            </div>

            <button
              type="submit"
              class="w-full bg-abbco-gold text-white font-semibold py-3 rounded-lg hover:bg-abbco-gold/90 transition"
            >
              Claim My Free Product
            </button>
          </form>
        </div>
      )}

      {reward && (
        <div class="space-y-6">
          <div class={`border-2 rounded-lg p-6 ${
            reward.status === 'fulfilled' 
              ? 'bg-green-50 border-green-400' 
              : 'bg-blue-50 border-blue-400'
          }`}>
            <h2 class="text-2xl font-bold mb-4">
              {reward.status === 'fulfilled' ? '‚úÖ Reward Fulfilled!' : '‚è≥ Reward Claimed'}
            </h2>
            
            <div class="space-y-2">
              <p><strong>Status:</strong> <span class="capitalize">{reward.status}</span></p>
              <p><strong>Claimed on:</strong> {new Date(reward.created_at).toLocaleDateString()}</p>
              {reward.claim_address && (
                <div>
                  <strong>Shipping to:</strong>
                  <div class="mt-1 bg-white p-3 rounded border border-abbco-charcoal/20 whitespace-pre-wrap">
                    {reward.claim_address}
                  </div>
                </div>
              )}
            </div>

            {reward.status === 'fulfilled' ? (
              <p class="mt-4 text-green-700">
                Your reward has been shipped! Thank you for your loyalty.
              </p>
            ) : (
              <p class="mt-4 text-blue-700">
                Your reward is being processed and will be shipped soon!
              </p>
            )}
          </div>

          <a 
            href="/dashboard" 
            class="inline-block bg-abbco-charcoal text-white font-semibold px-6 py-3 rounded-lg hover:bg-abbco-charcoal/90 transition"
          >
            Back to Dashboard
          </a>
        </div>
      )}
    </div>
  </div>
</AuthLayout>
