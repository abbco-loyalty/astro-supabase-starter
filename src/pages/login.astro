---
import "../../src/styles/globals.css";
import { getUser } from "../utils/auth";

const user = await getUser(Astro.cookies);

if (user) {
  return Astro.redirect('/dashboard');
}

let error = '';
const url = new URL(Astro.request.url);
error = url.searchParams.get('error') || '';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - ABBCo Loyalty</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-abbco-cream text-abbco-charcoal font-[Inter] flex items-center justify-center">
    <div class="max-w-md w-full mx-4">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-abbco-gold mb-2">ABBCo Rewards</h1>
        <p class="text-abbco-charcoal/70">Join our loyalty program</p>
      </div>

      <div class="bg-white rounded-lg shadow-xl p-8 border-2 border-abbco-gold/20">
        {error && (
          <div class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded">
            {error}
          </div>
        )}

        <div class="mb-6">
          <h2 class="text-2xl font-semibold mb-2">Sign In</h2>
          <form action="/api/auth/login" method="POST" class="space-y-4">
            <div>
              <label for="login-email" class="block text-sm font-medium mb-1">Email</label>
              <input
                type="email"
                id="login-email"
                name="email"
                required
                class="w-full px-4 py-2 border border-abbco-charcoal/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-abbco-gold"
              />
            </div>
            <div>
              <label for="login-password" class="block text-sm font-medium mb-1">Password</label>
              <input
                type="password"
                id="login-password"
                name="password"
                required
                class="w-full px-4 py-2 border border-abbco-charcoal/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-abbco-gold"
              />
            </div>
            <button
              type="submit"
              class="w-full bg-abbco-gold text-white font-semibold py-2 rounded-lg hover:bg-abbco-gold/90 transition"
            >
              Sign In
            </button>
          </form>
        </div>

        <div class="border-t border-abbco-charcoal/10 pt-6">
          <h2 class="text-2xl font-semibold mb-2">Create Account</h2>
          <form action="/api/auth/signup" method="POST" class="space-y-4">
            <div>
              <label for="signup-email" class="block text-sm font-medium mb-1">Email</label>
              <input
                type="email"
                id="signup-email"
                name="email"
                required
                class="w-full px-4 py-2 border border-abbco-charcoal/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-abbco-gold"
              />
            </div>
            <div>
              <label for="signup-password" class="block text-sm font-medium mb-1">Password</label>
              <input
                type="password"
                id="signup-password"
                name="password"
                required
                minlength="6"
                class="w-full px-4 py-2 border border-abbco-charcoal/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-abbco-gold"
              />
            </div>
            <button
              type="submit"
              class="w-full bg-abbco-charcoal text-white font-semibold py-2 rounded-lg hover:bg-abbco-charcoal/90 transition"
            >
              Create Account
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
